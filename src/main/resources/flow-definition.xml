<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<!-- Flow: list animals -->
	<bean id="listAnimalsValidate"  class="br.com.grupomult.flows.ListAnimalsValidate"  />
	<bean id="listAnimalsLoad"      class="br.com.grupomult.flows.ListAnimalsLoad"      />
	<bean id="listAnimalsConverter" class="br.com.grupomult.flows.ListAnimalsConverter" />
	<bean id="listAnimalsResponse"  class="br.com.grupomult.flows.ListAnimalsResponse"  />

	<!-- Flow: list animals by id -->
	<bean id="listAnimalsByIdValidate"     class="br.com.grupomult.flows.ListAnimalsByIdValidate"     />
	<bean id="listAnimalsByIdLoad"         class="br.com.grupomult.flows.ListAnimalsByIdLoad"         />
	<bean id="listAnimalsByIdLoadValidate" class="br.com.grupomult.flows.ListAnimalsByIdLoadValidate" />
	<bean id="listAnimalsByIdConverter"    class="br.com.grupomult.flows.ListAnimalsByIdConverter"    />
	<bean id="listAnimalsByIdResponse"     class="br.com.grupomult.flows.ListAnimalsByIdResponse"     />

</beans>